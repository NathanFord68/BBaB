
@model BBaB.ViewModels.Profile.LoginModel

    <div class="container d-flex flex-justify-center flex-column bg-grayWhite h-100 w-75">
        @using (Html.BeginForm("OnLogin", "Profile", FormMethod.Post, new { @class = "border mx-auto border-radius-6 p-3 w-75 bd-gray drop-shadow" }))
        {
            @Html.AntiForgeryToken()

            <h3>Login</h3>

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model._email, htmlAttributes: new { @class = "d-inline-block" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model._email, new { htmlAttributes = new { @class = "primary d-inline-block" } })
                        @Html.ValidationMessageFor(model => model._email, "", new { @class = "fg-crimson" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model._password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model._password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._password, "", new { @class = "fg-crimson" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="button dark" />
                    </div>
                </div>
            </div>
        }
    </div>


